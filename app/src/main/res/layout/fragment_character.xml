<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Имя и кнопка редактирования -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvCharacterName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/unnamed_character"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_name" />
        </LinearLayout>

        <!-- Статистика (короткая таблица) с модификаторами и save -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView android:padding="8dp" android:text="@string/str_abbrev"/>
                <TextView android:id="@+id/tvCharStr" android:padding="8dp" android:text=""/>
                <TextView android:padding="8dp" android:text="@string/dex_abbrev"/>
                <TextView android:id="@+id/tvCharDex" android:padding="8dp" android:text=""/>
            </TableRow>

            <TableRow>
                <TextView android:padding="8dp" android:text="@string/con_abbrev"/>
                <TextView android:id="@+id/tvCharCon" android:padding="8dp" android:text=""/>
                <TextView android:padding="8dp" android:text="@string/int_abbrev"/>
                <TextView android:id="@+id/tvCharInt" android:padding="8dp" android:text=""/>
            </TableRow>

            <TableRow>
                <TextView android:padding="8dp" android:text="@string/wis_abbrev"/>
                <TextView android:id="@+id/tvCharWis" android:padding="8dp" android:text=""/>
                <TextView android:padding="8dp" android:text="@string/cha_abbrev"/>
                <TextView android:id="@+id/tvCharCha" android:padding="8dp" android:text=""/>
            </TableRow>
        </TableLayout>

        <!-- Спасброски label (информативно) -->
        <TextView
            android:id="@+id/tvSavingThrowsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saving_throws_label"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/tvSavingThrows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_dash"/>

        <!-- Выбор класса -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_label" />

        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/classes_array" />

        <!-- Детали класса -->
        <LinearLayout
            android:id="@+id/classDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tvClassTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=""/>

            <TextView
                android:id="@+id/tvHitDice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hit_dice_label"/>

            <TextView
                android:id="@+id/tvHPAtFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hp_first_level" />

            <TextView
                android:id="@+id/tvProficiencies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proficiencies_label" />

            <TextView
                android:id="@+id/tvSaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saves_label" />

            <TextView
                android:id="@+id/tvSkillPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_two_skills" />

            <LinearLayout
                android:id="@+id/skillsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox android:id="@+id/cbAcrobatics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_acrobatics"/>
                <CheckBox android:id="@+id/cbAthletics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_athletics"/>
                <CheckBox android:id="@+id/cbPerception" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_perception"/>
                <CheckBox android:id="@+id/cbSurvival" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_survival"/>
                <CheckBox android:id="@+id/cbIntimidation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_intimidation"/>
                <CheckBox android:id="@+id/cbHistory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_history"/>
                <CheckBox android:id="@+id/cbInsight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_insight"/>
                <CheckBox android:id="@+id/cbAnimalHandling" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skill_animal_handling"/>
            </LinearLayout>

            <!-- Экипировка options -->
            <TextView android:layout_marginTop="8dp" android:text="@string/equipment_groups_info"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/group1_label" />
            <RadioGroup
                android:id="@+id/rgArmor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbArmorA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/armor_chain" />

                <RadioButton
                    android:id="@+id/rbArmorB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/armor_leather_bow" />
            </RadioGroup>


            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/group2_label" />
            <RadioGroup
                android:id="@+id/rgWeapon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbWeapon1A"  android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/weapon_shield" />
                <RadioButton android:id="@+id/rbWeapon1B"  android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/weapon_two" />
            </RadioGroup>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/group3_label" />
            <RadioGroup
                android:id="@+id/rgWeapon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbWeapon2A"  android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/weapon_crossbow" />
                <RadioButton android:id="@+id/rbWeapon2B"  android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/weapon_handaxes" />
            </RadioGroup>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/group4_label" />

            <RadioGroup
                android:id="@+id/rgPack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbPackA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pack_explorer" />

                <RadioButton
                    android:id="@+id/rbPackB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pack_traveler" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/equipment_label" />

        </LinearLayout>

        <!-- ПРЕДЫСТОРИЯ -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/background_label" />

        <Spinner
            android:id="@+id/spinnerBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/backgrounds_array"/>

        <TextView
            android:id="@+id/tvBackgroundEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bg_equipment_label" />
        <Button
            android:id="@+id/btnOpenSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_save_screen" />
    </LinearLayout>


</ScrollView>
